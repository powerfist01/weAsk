    <script>
        $(document).ready(function(){
            $('#butt').click(function(){
                $('#formOTP').show();
            })
        })
    </script>
</head>
<body>
	<div class="main-w3layouts wrapper" style="padding-top: 10%">
		<div class="main-agileinfo" id="just">
			<div class="agileits-top">
				<form action="/forgotPass" method="post" style="padding-top: 0%; padding-bottom:0%">
					<input class="text" type="email" name="id" placeholder="Email" required>
					<br>
                    <input id="butt" type="submit" value="Send OTP">
                    <br>
                </form>
                <form action="/confirmOTP" method="POST" id="formOTP" style="display: none;">
                    <input class="text" type="text" name="otp" placeholder="Enter OTP" required>
                    <input type="submit" value="Submit OTP">
                </form>
				<p><strong>Know your Password?</strong> <a href="/login" style="text-decoration: none;"> <strong>Login Here</strong></a><strong>!</strong></p>
			</div>
		</div>
